
<%- include('partials/head.ejs'); -%>
<%- include('partials/homenavbar.ejs'); -%>
<%- include('partials/navcategories.ejs'); -%>

	<div class="jumbotron pb-1 pt-5">
	  <h2 class="display-4">Bem vindo ao Blog</h2>
